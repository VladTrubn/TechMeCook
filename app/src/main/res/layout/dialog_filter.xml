<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/filterEquipment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Equipment"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/filterQuery"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/filterQuery"
            app:layout_constraintTop_toBottomOf="@+id/filterIngredients" />

        <EditText
            android:id="@+id/filterDiet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Diet"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/filterQuery"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/filterQuery"
            app:layout_constraintTop_toBottomOf="@+id/filterEquipment" />

        <EditText
            android:id="@+id/filterQuery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ems="10"
            android:hint="Search recipe"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/filterIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="Ingredients"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/filterQuery"
            app:layout_constraintStart_toStartOf="@+id/filterQuery"
            app:layout_constraintTop_toBottomOf="@+id/filterQuery" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>